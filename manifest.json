{
  "manifest_version": 3,
  "name": "Flow",
  "version": "2.0",
  "description": "Block distractions on YouTube, Reddit, and Twitter/X",
  "permissions": [
    "storage",
    "tabs",
    "commands"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.reddit.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube-blocker.js"],
      "css": ["youtube-blocker.css"]
    },
    {
      "matches": [
        "*://*.reddit.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*"
      ],
      "js": ["social-blocker.js"],
      "css": ["social-blocker.css"]
    }
  ],
  "commands": {
    "toggle-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Toggle all blockers"
    },
    "pause-30min": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Pause blocking for 30 minutes"
    },
    "toggle-current-site": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle blocker for current site"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/bird.png",
      "48": "images/bird.png",
      "128": "images/bird.png"
    }
  },
  "icons": {
    "16": "images/bird.png",
    "48": "images/bird.png",
    "128": "images/bird.png"
  }
}
